grammar org.xtext.example.mydsl.StateMachine with org.eclipse.xtext.common.Terminals

generate stateMachine "http://www.xtext.org/example/mydsl/StateMachine"

StateMachine:
	"Event" "block" "(" (event += Event)* ")" "stop"
	"Reset" "block" "(" (eventReset += [Event])* ")" "stop"
	"Instructions" "block" "(" (instructions += Instruction)* ")" "stop"
	(state += State)*;

Instruction:
	name=ID value=ID;
	
Event:
	name=ID value=ID;

State:
	"State" name=ID "block" "(" ("action" (actions += [Instruction]) +)?
	(moves += Move)* ")" "stop";

Move:
	event=[Event] "to" state=[State];
	
    
@Override 
terminal STRING:
    '"' ( '\\'('b'|'t'|'n'|'f'|'r'|'u'|'"'|"'"|'\\') | !('\\'|'"') )* '"' |
    "'" ( '\\'('b'|'t'|'n'|'f'|'r'|'u'|'"'|"'"|'\\') | !('\\'|"'") )* "'";

terminal DOUBLE:
    INT '.' INT;